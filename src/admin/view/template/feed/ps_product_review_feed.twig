{{ header }}
{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<div class="input-group">
					<div class="input-group-text">{{ entry_active_store }}</div>
					<select name="store" id="input-store" class="form-select">
						{% for store in stores %}
						<option value="{{ store.href }}" {% if store.store_id == store_id %} selected{% endif %}>{{ store.name }}</option>
						{% endfor %}
					</select>&nbsp;
					<button type="submit" form="form-feed" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>&nbsp;
					<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
				</div>
			</div>
			<h1>{{ heading_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid">
		<div class="card">
			<div class="card-header"><i class="fa-solid fa-list"></i> {{ text_edit }}</div>
			<div class="card-body">

				<form id="form-feed" action="{{ action }}" method="post" data-oc-toggle="ajax">

					<ul class="nav nav-tabs">
						<li class="nav-item"><a href="#tab-general" data-bs-toggle="tab" class="nav-link active">{{ tab_general }}</a></li>
						<li class="nav-item"><a href="#tab-support" data-bs-toggle="tab" class="nav-link">{{ tab_help_and_support }}</a></li>
					</ul>

					<div class="tab-content">
						<div id="tab-general" class="tab-pane active">

							<div class="row mb-3">
								<label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
								<div class="col-sm-10">
									<div class="form-check form-switch form-switch-lg">
										<input type="hidden" name="feed_ps_product_review_feed_status" value="0">
										<input type="checkbox" name="feed_ps_product_review_feed_status" value="1" id="input-status" class="form-check-input" {% if feed_ps_product_review_feed_status %} checked{% endif %}>
									</div>
								</div>
							</div>

							<div class="row mb-3">
								<label for="input-merchant-id" class="col-sm-2 col-form-label">{{ entry_merchant_id }}</label>
								<div class="col-sm-10">
									<input type="text" name="feed_ps_product_review_feed_merchant_id" value="{{ feed_ps_product_review_feed_merchant_id }}" placeholder="{{ entry_merchant_id }}" id="input-merchant-id" class="form-control">
									<div id="error-input-merchant-id" class="invalid-feedback"></div>
									<div class="form-text">{{ help_merchant_id }}</div>
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-2 col-form-label">{{ entry_review_feed_url }}</label>
								<div class="col-sm-10">
									{% for language in languages %}
									<div class="input-group">
										<div class="input-group-text"><img src="{{ language.image }}" title="{{ language.name }}"></div>
										<input type="text" name="review_feed_{{ language.language_id }}" value="{{ review_feed_urls[language.language_id] }}" id="input-review-feed-{{ language.language_id }}" class="form-control" readonly>
										<span class="input-group-btn">
											<button type="button" class="btn btn-info btn-copy" data-bs-toggle="tooltip" data-input-id="input-review-feed-{{ language.language_id }}" title="{{ help_copy }}"><i class="fa-solid fa-copy"></i></button>
											<button type="button" class="btn btn-light btn-open" data-bs-toggle="tooltip" data-input-id="input-review-feed-{{ language.language_id }}" title="{{ help_open }}"><i class="fa-solid fa-link"></i></button>
										</span>
									</div>
									{% endfor %}
								</div>
							</div>

							<fieldset class="border p-3 mb-3">
								<legend>{{ heading_integrations }}</legend>

								<div class="row mb-3">
									<label for="input-opt-in-integration" class="col-sm-2 col-form-label">{{ opt_in_integration }}</label>
									<div class="col-sm-10">
										<div class="form-check form-switch form-switch-lg">
											<input type="hidden" name="feed_ps_product_review_feed_opt_in_integration" value="0">
											<input type="checkbox" name="feed_ps_product_review_feed_opt_in_integration" value="1" id="input-opt-in-integration" class="form-check-input" {% if feed_ps_product_review_feed_opt_in_integration %} checked{% endif %}>
										</div>
										<div class="form-text">{{ help_opt_in_integration }}</div>
									</div>
								</div>

								<div class="row mb-3">
									<label for="input-badge-integration" class="col-sm-2 col-form-label">{{ badge_integration }}</label>
									<div class="col-sm-10">
										<div class="form-check form-switch form-switch-lg">
											<input type="hidden" name="feed_ps_product_review_feed_badge_integration" value="0">
											<input type="checkbox" name="feed_ps_product_review_feed_badge_integration" value="1" id="input-badge-integration" class="form-check-input" {% if feed_ps_product_review_feed_badge_integration %} checked{% endif %}>
										</div>
										<div class="form-text">{{ help_badge_integration }}</div>
									</div>
								</div>

							</fieldset>

							<fieldset class="border p-3 mb-3">
								<legend>{{ heading_authentication }}</legend>

								<div class="row mb-3">
									<label for="input-login" class="col-sm-2 col-form-label">{{ entry_login }}</label>
									<div class="col-sm-10">
										<input type="text" name="feed_ps_product_review_feed_login" value="{{ feed_ps_product_review_feed_login }}" placeholder="{{ entry_login }}" id="input-login" class="form-control">
									</div>
								</div>

								<div class="row mb-3">
									<label for="input-password" class="col-sm-2 col-form-label">{{ entry_password }}</label>
									<div class="col-sm-10">
										<input type="password" name="feed_ps_product_review_feed_password" value="{{ feed_ps_product_review_feed_password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control">
									</div>
								</div>

							</fieldset>

						</div>
						<div id="tab-support" class="tab-pane">

							<h3>{{ heading_getting_started }}</h3>
							{{ text_getting_started }}
							<hr>
							<h3>{{ heading_setup }}</h3>
							{{ text_setup }}
							<hr>
							<h3>{{ heading_troubleshot }}</h3>
							{{ text_troubleshot }}
							<hr>
							<h3>{{ heading_faq }}</h3>
							{{ text_faq }}
							<hr>
							<h3>{{ heading_contact }}</h3>
							{{ text_contact }}

						</div>

					</div>

					<input type="hidden" name="store_id" value="{{ store_id }}">
				</form>

			</div>
		</div>
	</div>
	<script>
		$('#input-store').on('change', function () {
			window.location = $(this).val();
		});

    $('.btn-copy').on('click', function () {
			var copyText = $("#" + $(this).data('inputId'));

			if (copyText.length) {
					copyText.select();
					copyText[0].setSelectionRange(0, 99999);
					document.execCommand("copy");
			}
		});

		$('.btn-open').on('click', function () {
			var linkUrl = $("#" + $(this).data('inputId')).val();

			if (linkUrl.length) {
					window.open(linkUrl, '_blank');
			}
		});
	</script>
</div>
{{ footer }}
